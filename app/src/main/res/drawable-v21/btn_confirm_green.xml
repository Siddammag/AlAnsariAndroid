<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/colorWhiteOverlay">

    <item
        android:id="@android:id/mask"
        android:drawable="@color/colorBlack"
        android:state_pressed="true"></item>
    <item>

        <selector>
            <item android:state_enabled="false">
                <shape>
                    <solid android:color="@color/colorE6E7E7"></solid>
                    <corners android:radius="@dimen/dimens_70"></corners>
                    <stroke
                        android:width="@dimen/dimens_1"
                        android:color="@color/colorE6E7E7"></stroke>
                </shape>
            </item>
            <item>
                <shape>
                    <solid android:color="@color/color70D303"></solid>
                    <corners android:radius="@dimen/dimens_70"></corners>
                    <stroke
                        android:width="@dimen/dimens_2"
                        android:color="@color/color70D303"></stroke>
                </shape>
            </item>
        </selector>
    </item>

</ripple>