<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/colorPrimary"
    app:layout_scrollFlags="scroll|enterAlways"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

    <TextView
        android:id="@+id/city_title"
        style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:paddingBottom="@dimen/dimens_8"
        android:paddingTop="@dimen/dimens_8"
        android:textColor="@color/colorWhite"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/city_drawable"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:contentDescription="@null"
        android:paddingLeft="@dimen/dimens_1"
        android:paddingTop="@dimen/dimens_5"
        android:scaleType="centerInside"
        android:visibility="gone" />

    <TextView
        android:id="@+id/toolbar_title"
        style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
        fontPath="fonts/HelveticaNeue-Medium.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:maxLines="1"
        android:textColor="@color/colorWhite"
        android:visibility="visible" />

</androidx.appcompat.widget.Toolbar>