<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/DialogCardView"
    android:layout_margin="@dimen/dimens_20"
    app:cardBackgroundColor="@color/splash_bg">

    <!--@dimen/layout_width-->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimens_4"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimens_3"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimens_1"
                    android:background="@color/colorWhite"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/dialog_title"
                        style="@style/DialogTitleTextView"
                        android:text="jdksjfksdfjksdfjsdkfjsdkfsjddfdsfsdffsffsfff" />

                    <ImageView
                        android:id="@+id/iv_popup_img"
                        android:layout_width="@dimen/dimens_200"
                        android:layout_height="@dimen/dimens_200"
                        android:layout_marginTop="@dimen/dimens_5"
                        android:src="@drawable/india_banner" />

                    <TextView
                        android:id="@+id/dialog_description"
                        style="@style/DialogTextView2"
                        android:text="jdksjfksdfjksdfjsdkfjsdkfsjddfdsfsdffsffsfff" />


                    <Button
                        android:id="@+id/dialog_btn_click_here"
                        style="@style/SubmitBtnDialog"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimens_5"
                        android:paddingLeft="@dimen/dimens_30"
                        android:paddingRight="@dimen/dimens_0"
                        android:text="@string/btn_click_here"
                        android:textColor="@color/colorWhite" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/close_btn"
            android:layout_width="@dimen/dimens_25"
            android:layout_height="@dimen/dimens_25"
            android:layout_alignParentRight="true"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/minus_dimens_2"
            android:layout_marginLeft="@dimen/dimens_2"
            android:scaleType="fitXY"
            android:tint="@color/blue"
            app:srcCompat="@drawable/svg_close_icon_blue"
            android:visibility="gone"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView >