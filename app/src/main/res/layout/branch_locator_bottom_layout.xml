<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/details_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:clickable="true"
    android:clipToPadding="false"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:paddingLeft="@dimen/dimens_6"
    android:paddingRight="@dimen/dimens_6">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_64"
            android:layout_marginLeft="@dimen/dimens_24"
            android:foreground="@drawable/cardview_title_selector"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardCornerRadius="@dimen/dimens_6"
            app:cardElevation="@dimen/dimens_3"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="@dimen/dimens_4"
                android:layout_marginLeft="@dimen/dimens_50"
                android:layout_marginRight="@dimen/dimens_6"
                android:layout_marginTop="@dimen/dimens_4"
                android:clipToPadding="false">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/open_status_icon"
                    android:layout_width="@dimen/dimens_6"
                    android:layout_height="@dimen/dimens_6"
                    android:layout_alignBottom="@+id/open_status"
                    android:layout_alignTop="@+id/open_status"
                    android:layout_toLeftOf="@+id/open_status"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/svg_branch_open" />

                <TextView
                    android:id="@+id/open_status"
                    fontPath="fonts/HelveticaNeue.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dimens_1"
                    android:paddingLeft="@dimen/dimens_4"
                    android:text="Open Now"
                    android:textColor="@color/color62A930"
                    android:textSize="@dimen/dimens_8sp" />

                <TextView
                    android:id="@+id/name"
                    fontPath="fonts/Roboto-Medium.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/open_status_icon"
                    android:maxLines="1"
                    android:text="Parveen K"
                    android:textColor="@color/color377EC4"
                    android:textSize="@dimen/dimens_11sp" />

                <TextView
                    android:id="@+id/address"
                    fontPath="fonts/HelveticaNeue.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/name"
                    android:lineSpacingMultiplier="1.1"
                    android:maxLines="2"
                    android:paddingTop="@dimen/dimens_2"
                    android:text="BTM Layout, 1st Stage, Bengaluru, \nIndia"
                    android:textColor="@color/color373A49"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/dimens_8sp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/navigation_icon"
        android:layout_width="@dimen/dimens_64"
        android:layout_height="@dimen/dimens_64"
        android:layout_margin="@dimen/dimens_6"
        android:background="@drawable/ic_route_background"
        android:elevation="@dimen/dimens_6"
        android:padding="@dimen/dimens_14"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/svg_route_with_marker" />
</RelativeLayout>