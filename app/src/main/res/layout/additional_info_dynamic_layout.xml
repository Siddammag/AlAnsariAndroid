<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dimens_8"
    android:paddingRight="@dimen/dimens_8"
    tools:ignore="MissingPrefix">

    <TextView
        android:id="@+id/source_label"
        fontPath="fonts/Roboto-Regular.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="@dimen/dimens_16"
        android:paddingLeft="@dimen/dimens_8"
        android:text="Source of Fund"
        android:textColor="@color/colorE86768"
        android:textSize="@dimen/dimens_12sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/source_card_view"
        style="@style/DropDownCardView"
        android:layout_marginTop="@dimen/dimens_6">

        <RelativeLayout style="@style/DropDownRelativeLayout">

            <AutoCompleteTextView
                android:id="@+id/source_text"
                style="@style/DropDownAutoCompleteTextView"
                android:hint="Source of Fund" />

            <ImageView
                android:id="@+id/arrow"
                style="@style/dropdownArrowStyle" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>