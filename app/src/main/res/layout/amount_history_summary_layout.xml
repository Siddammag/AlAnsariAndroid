<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/amount_summary_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_blc_grad_bg_14"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/dimens_10"
    android:paddingTop="@dimen/dimens_10"
    android:weightSum="1">

    <LinearLayout
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.5"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/total_receive"
                fontPath="fonts/HelveticaNeue.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimens_3"
                android:maxLines="1"
                android:text="3,680.00"
                android:textColor="@color/color62A930"
                android:textSize="@dimen/dimens_22sp" />

            <TextView
                android:id="@+id/total_receive_currency_code"
                fontPath="fonts/HelveticaNeue-Medium.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:paddingBottom="@dimen/dimens_4"
                android:text="INR"
                android:textColor="@color/color373A49"
                android:textSize="@dimen/dimens_10sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/total_receive_label"
            fontPath="fonts/HelveticaNeue.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:maxLines="1"
            android:paddingTop="@dimen/dimens_2"
            android:text="@string/receive_amount"
            android:textColor="@color/color373A49"
            android:textSize="@dimen/dimens_10sp" />
    </LinearLayout>

    <View
        android:visibility="gone"
        android:layout_width="@dimen/dimens_0.5"
        android:layout_height="match_parent"
        android:background="@drawable/line_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.5"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/total_to_pay"
                fontPath="fonts/HelveticaNeue.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimens_3"
                android:maxLines="1"
                android:text="3,680.00"
                android:textColor="@color/colorE86768"
                android:textSize="@dimen/dimens_22sp" />

            <TextView
                android:id="@+id/total_to_pay_currency_code"
                fontPath="fonts/HelveticaNeue-Medium.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:paddingBottom="@dimen/dimens_4"
                android:text="AED"
                android:textColor="@color/color373A49"
                android:textSize="@dimen/dimens_10sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/total_to_pay_label"
            fontPath="fonts/HelveticaNeue.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/total_to_pay"
            android:gravity="center"
            android:maxLines="1"
            android:paddingTop="@dimen/dimens_2"
            android:text="@string/total_to_pay"
            android:textColor="@color/color373A49"
            android:textSize="@dimen/dimens_10sp" />
    </LinearLayout>
</LinearLayout>