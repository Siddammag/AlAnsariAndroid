<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/DialogCardView">

    <!--@dimen/layout_width-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/dialog_title"
                style="@style/DialogTitleTextView"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">

                <ImageView
                    android:id="@+id/close"
                    android:layout_width="@dimen/dimens_20"
                    android:layout_height="@dimen/dimens_20"
                    android:layout_margin="@dimen/dimens_5"
                    app:srcCompat="@drawable/svg_close_icon_blue" />
            </RelativeLayout>


            <TextView
                android:id="@+id/dialog_message"
                style="@style/DialogTextViewRegular"
                android:layout_below="@id/dialog_title"
                android:gravity="left"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/dimens_13sp" />
        </RelativeLayout>


    </ScrollView>

</android.support.v7.widget.CardView>