<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/dimens_5"
    android:padding="@dimen/dimens_5"
    android:background="@color/color1E6AB3">

    <TextView
        android:id="@+id/title"
        fontPath="fonts/Roboto-Regular.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="Value Transfer"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/dimens_12sp" />



    <ImageView
        android:id="@+id/account_arrow_image"
        android:layout_width="@dimen/dimens_20"
        android:layout_height="@dimen/dimens_20"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/ic_down_arrow"
        android:visibility="visible"/>
</RelativeLayout>

