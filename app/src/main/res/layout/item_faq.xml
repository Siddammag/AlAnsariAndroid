<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/header_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="@dimen/dimens_6"
    android:layout_marginLeft="@dimen/dimens_8"
    android:layout_marginRight="@dimen/dimens_8"
    android:layout_marginTop="@dimen/dimens_6"
    android:background="@color/colorBAB6B6"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/dimens_0.5">

    <RelativeLayout
        android:id="@+id/question_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color1E6AB3"
        android:paddingBottom="@dimen/dimens_2"
        android:paddingTop="@dimen/dimens_2">

        <TextView
            android:id="@+id/question"
            fontPath="fonts/Roboto-Regular.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/question_arrow"
            android:lineSpacingMultiplier="1.1"
            android:maxLines="3"
            android:paddingBottom="@dimen/dimens_8"
            android:paddingLeft="@dimen/dimens_8"
            android:paddingRight="@dimen/dimens_6"
            android:paddingTop="@dimen/dimens_8"
            android:text="1. Lorem lpsum is simply dummy text?"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/dimens_12sp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/question_arrow"
            android:layout_width="@dimen/dimens_15"
            android:layout_height="@dimen/dimens_15"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimens_10"
            android:layout_marginTop="@dimen/dimens_10"
            app:srcCompat="@drawable/ic_up_arrow" />

    </RelativeLayout>

    <TextView
        android:id="@+id/answer"
        fontPath="fonts/Roboto-Regular.ttf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:lineSpacingMultiplier="1.3"
        android:paddingBottom="@dimen/dimens_14"
        android:paddingLeft="@dimen/dimens_8"
        android:paddingRight="@dimen/dimens_8"
        android:paddingTop="@dimen/dimens_8"
        android:text="@string/lipsum"
        android:textColor="@color/color3F3F3F"
        android:textSize="@dimen/dimens_11sp" />

</LinearLayout>