<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimens_10">

    <!--@dimen/layout_width-->
    <!-- <android.support.v4.widget.NestedScrollView
         android:layout_width="match_parent"
         android:layout_height="wrap_content">-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimens_10"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimens_4"
                android:background="@color/colorWhite"
                android:gravity="center"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimens_4"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/dimens_2"
                                android:background="@color/colorWhite"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/dialog_title"
                                    style="@style/DialogTitleTextView"
                                    android:padding="@dimen/dimens_5"
                                    android:text="jdksjfksdfjksdfjsdkfjsdkfsjddfdsfsdffsffsfff"
                                    android:textStyle="bold" />


                                <!--
                                android:layout_width="@dimen/dimens_180"
                                    android:layout_height="@dimen/dimens_200"-->
                                <ImageView
                                    android:id="@+id/iv_popup_img"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dimens_5"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/india_banner" />

                                <TextView
                                    android:id="@+id/dialog_description"
                                    style="@style/DialogTextView2"
                                    android:padding="@dimen/dimens_5"
                                    android:text="nfbhfgbfhcbfhbfghfcvbhfcgbcfgbcgbbdfvbdfnvsdfhbvjhbfvhbnvn"
                                    android:textColor="@color/colorBlack"
                                     />


                                <Button
                                    android:id="@+id/dialog_btn_click_here"
                                    style="@style/SubmitBtnDialog"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dimens_5"
                                    android:paddingLeft="@dimen/dimens_40"
                                    android:paddingRight="@dimen/dimens_40"
                                    android:text="@string/btn_click_here"
                                    android:textColor="@color/colorWhite" />
                            </LinearLayout>

                        </LinearLayout>
                    </ScrollView>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/close_btn"
            android:layout_width="@dimen/dimens_25"
            android:layout_height="@dimen/dimens_25"
            android:layout_alignParentRight="true"
            android:layout_gravity="end"
            android:background="@drawable/bg_circle"
            android:scaleType="fitXY"
            android:visibility="visible"
            app:srcCompat="@drawable/svg_close_icon_white" />
    </RelativeLayout>
    <!--
        </android.support.v4.widget.NestedScrollView>
    -->
</RelativeLayout>