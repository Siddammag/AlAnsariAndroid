<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/DialogCardView">

    <!--@dimen/layout_width-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/dimens_350"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/DialogTitleTextView"
                android:layout_centerInParent="true"
                android:text="Current Promotions" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/close_btn"
                android:layout_width="@dimen/dimens_25"
                android:layout_height="@dimen/dimens_25"
                android:layout_alignParentRight="true"
                app:srcCompat="@drawable/svg_close_icon_blue" />
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimens_10" />

        <TextView
            android:id="@+id/message"
            style="@style/DialogTitleTextView"
            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dimens_25"
            android:layout_marginRight="@dimen/dimens_15"
            android:layout_marginTop="@dimen/dimens_5"
            android:gravity="left"
            android:padding="@dimen/dimens_0"
            android:text="Current Promotions"
            android:textColor="@color/color024B54"
            android:textSize="@dimen/dimens_12sp" />

        <Button
            android:id="@+id/save"
            android:layout_width="@dimen/dimens_70"
            android:layout_height="@dimen/dimens_35"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/dimens_5"
            android:background="@drawable/btn_call"
            android:text="@string/save"
            android:textColor="@color/white"
            android:textSize="@dimen/dimens_14sp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>