<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/register_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:id="@+id/reg_main_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/reg_header_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_register_header_bg">

                <ImageView
                    android:id="@+id/reg_logo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimens_30"
                    android:layout_centerInParent="true"
                    app:srcCompat="@drawable/ic_logo_white" />

                <ImageView
                    android:id="@+id/wave"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimens_48"
                    android:layout_below="@+id/reg_logo"
                    android:layout_marginBottom="@dimen/minus_dimens_8"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/svg_wave" />

                <RelativeLayout
                    android:id="@+id/home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimens_10">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/svg_toolbar_home" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/reg_mobile_layout"
                android:layout_width="@dimen/min_width_view"
                android:layout_height="wrap_content"
                android:layout_below="@+id/reg_header_layout"
                android:layout_centerHorizontal="true">

                <TextView
                    android:id="@+id/title"
                    fontPath="fonts/HelveticaNeue.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/temp_message2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/dimens_14"
                    android:layout_marginTop="@dimen/dimens_14"
                    android:text="Registration Reference"
                    android:textColor="@color/color3F3F3F"
                    android:textSize="@dimen/dimens_18sp" />

                <TextView
                    android:id="@+id/reference_num"
                    fontPath="fonts/HelveticaNeue.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/dimens_4"
                    android:letterSpacing="0.12"
                    android:maxLines="1"
                    android:text="--------"
                    android:textColor="@color/color1E6AB3"
                    android:textSize="@dimen/dimens_40sp" />

                <TextView
                    android:id="@+id/message"
                    fontPath="fonts/Roboto-Regular.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/reference_num"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:lineSpacingMultiplier="1.2"
                    android:padding="@dimen/dimens_16"
                    android:textColor="@color/color8B8989"
                    android:textSize="@dimen/dimens_12sp" />

                <Button
                    android:id="@+id/branch_locator_btn"
                    style="@style/SubmitBtn"
                    android:layout_below="@+id/message"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dimens_12"
                    android:text="Branch Locator" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
