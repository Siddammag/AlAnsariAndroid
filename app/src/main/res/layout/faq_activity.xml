<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/bg"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <include layout="@layout/toolbar_actionbar_menu" />

        <TextView
            android:id="@+id/question"
            fontPath="fonts/Roboto-Medium.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:paddingBottom="@dimen/dimens_8"
            android:paddingLeft="@dimen/dimens_12"
            android:paddingRight="@dimen/dimens_6"
            android:paddingTop="@dimen/dimens_10"
            android:text="Describe your problem"
            android:textColor="@color/color3F3F3F"
            android:textSize="@dimen/dimens_14sp" />


        <include layout="@layout/recycler_view_full" />
    </LinearLayout>

</FrameLayout>